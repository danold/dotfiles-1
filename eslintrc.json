{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jasmine": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "eslint-config-prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "@typescript-eslint/no-use-before-define": "off"
  }
}
