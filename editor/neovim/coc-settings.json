{
  // suggestions
  "suggest.autoTrigger": "none",
  "signature.target": "echo",
  "suggest.noselect": false,
  // diagnostics
  "diagnostic.enable": true,
  "diagnostic.enableSign": false,
  "diagnostic.enableMessage": "jump",
  "diagnostic.messageTarget": "float",
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextPrefix": " ┃ ",
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.maxWindowHeight": 20,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"]
  },
  // git
  "git.showCommitInFloating": true,
  "git.addedSign.hlGroup": "SignifySignAdd",
  "git.changedSign.hlGroup": "SignifySignChange",
  "git.removedSign.hlGroup": "SignifySignDelete",
  "git.topRemovedSign.hlGroup": "SignifySignDeleteFirstLine",
  "git.changeRemovedSign.hlGroup": "SignifySignChange",
  "git.semanticCommit.scope": false,
  // python
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  // vue
  "vetur.validation.template": false,
  // shell
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-filename", "script.sh"]
    }
  },
  // yaml
  /* "yaml.schemas": { */
  /*   "kubernetes": "*.yaml" */
  /* }, */
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
